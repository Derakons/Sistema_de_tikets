    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Funcionalidad para los detalles expandibles
            const detallesExpandibles = document.querySelectorAll('.detalle-expandible');
            detallesExpandibles.forEach(function(detalle) {
                const header = detalle.querySelector('.detalle-header');
                header.addEventListener('click', function() {
                    detalle.classList.toggle('activo');
                    const icono = header.querySelector('i');
                    if (detalle.classList.contains('activo')) {
                        icono.className = 'fas fa-chevron-up';
                    } else {
                        icono.className = 'fas fa-chevron-down';
                    }
                });
